@using UniversityCourseAndResultManagementSystemApp.Models
@model UniversityCourseAndResultManagementSystemApp.Models.Course

@{
    ViewBag.Title = "Save";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Department> listOfDepartments = ViewBag.listOfDepartments;
    //Add a department in First Index in Department List
    listOfDepartments.Insert(0, new Department(null, "AAA", "---Select---"));
}

@using (Html.BeginForm())
{
    <fieldset>
        <legend>Save Course</legend>
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(course => course.Code, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(course => course.Code, new { @class = "form-control", @placeholder = "Course Code" })
                    @Html.ValidationMessageFor(course => course.Code)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(course => course.Name, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(course => course.Name, new { @class = "form-control", @placeholder = "Course Name" })
                    @Html.ValidationMessageFor(course => course.Name)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(course => course.Credit, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(course => course.Credit, new { @class = "form-control", @placeholder = "Course Credit" })
                    @Html.ValidationMessageFor(course => course.Credit)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(course => course.Description, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextAreaFor(course => course.Description, new { @class = "form-control", @placeholder = "Course Description" })
                    @Html.ValidationMessageFor(course => course.Description)
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(course => course.DepartmentId, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.DropDownListFor(course => course.DepartmentId, new SelectList(listOfDepartments, "Id", "Name"), htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(course => course.DepartmentId)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(course => course.Semester, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.DropDownListFor(course => course.Semester, new SelectList(ViewBag.listOfSemester, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(course => course.Semester)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Save</button>
                </div>
                <h3>@ViewBag.message</h3>
            </div>
        </div>
    </fieldset>
}
@section scripts
 {
    <script src="~/Scripts/jquery-2.2.3.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}


